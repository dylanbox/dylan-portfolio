{% extends 'site_base.njk' %}

{% block main %}
  <section class="about-section__component">
      <div class="grid grid-fixed">
          <header>
              <h2>About</h2>
          </header>

          <article class="about-section--content">
              <p>Dylan Box is a product designer and developer based out of Detroit, Mi. His work includes the design and development of websites, apps, and products. A graduate of the University of Michigan Stamps School of Art & Design, his work focuses on creating accessible and user-friendly products that delight and entertain.</p>

              <div class="about-section--skills-container">
                  <h4>Development Skills</h4>
                  <ul class="about-section--skills">
                      <li>HTML</li>
                      <li>CSS</li>
                      <li>Javascript</li>
                      <li>Python</li>
                      <li>Wordpress</li>
                  </ul>

                  <h4>Design Skills</h4>
                  <ul class="about-section--skills">
                      <li>Illustrator</li>
                      <li>Photoshop</li>
                      <li>CAD & 3D Modeling</li>
                  </ul>
              </div>
          </article>
      </div>
  </section>

  <section class="work-list__component">
      <header class="grid grid-fixed">
          <h2>Work</h2>
      </header>

      <ul class="work-list--list-container">
        {% for work in works %}
          <li class="work-list--work-container {{ 'work-list--work-container-large' if work.isLargePreview }}">
              {% include 'components/_work_preview.njk' %}
          </li>
        {% endfor %}
      </ul>
  </section>
{% endblock main %}
